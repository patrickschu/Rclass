best=function(state, outcome) {
		setwd("E:/");
		#Read data
		dataset=read.csv("outcome-of-care-measures.csv", header=T);
		dataset$State=as.factor(dataset$State);
		#Check that state and outcome are valid
		if (state %in% levels(dataset$State) == FALSE)
		{
		stop("invalid state")
 		}
		if (outcome %in% c("pneumonia", "heart attack", "heart failure") == FALSE)
		{
		stop("invalid outcome")
		}
		#the actual thing
		statedataset=subset(dataset, dataset$State==state);

		if (outcome == "heart attack")
		{
		statedataset1=statedataset[order(statedataset[,11], statedataset[,2]),];
		return (statedataset1[1,2])
		}
		if (outcome== "pneumonia")
		{
		statedataset1=statedataset[order(statedataset[,23], statedataset[,2]),];
		#print (statedataset1[2,2]);
		print (statedataset1[,2]);
		return (statedataset1[1,2])
		
		}
		
		if (outcome== "heart failure")
		{
		statedataset1=statedataset[order(statedataset[,17],];
		return (statedataset1[1,2])
		}

		
		#Return hospital name in that state with lowest 30-day death rate
		}

best("NJ", "heart failure")
